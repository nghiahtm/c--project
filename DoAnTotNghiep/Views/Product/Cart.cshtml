@model List<DoAnTotNghiep.Models.DTO.ProductDTO>
@{
    ViewBag.Title = "Cart";
    //Layout = "~/Views/Shared/_LayoutProductDetail.cshtml";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/Images/bannerctsp.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="shoping-cart spad">
    <div class="container">
        <input id="StrProduct" hidden type="text" value="" />
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th hidden>ID_Product</th>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var product in Model)
                        {
                            <tbody>
                                <tr>
                                    <td hidden id="ID_Product">@product.ID_Product</td>
                                    <td class="shoping__cart__item">
                                        <img src="~/Images/@(product.Product_Img)" alt="" style="width:20%; height:20%">
                                        <h5>@product.Product_Name</h5>
                                    </td>
                                    <td id="Price" class="shoping__cart__price">
                                        $@product.Price
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="@product.Quantity" readonly="readonly">
                                            </div>
                                        </div>
                                    </td>
                                    <td id="totalPrice" class="shoping__cart__total">
                                        $@(product.Price * product.Quantity)
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close" onclick="removeProduct(@product.ID_Product)"></span>
                                    </td>
                                </tr>

                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a onclick="shop()" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a onclick="updateCart()" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Upadate Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    @*<div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>*@
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li><span style="float:left">Total: $  <input id="SubTotal" readonly value="@ViewBag.TotalPrice"/></span></li>
                        @*<li><span style="float:left">$  <input id="Total" readonly value="@ViewBag.TotalPrice"/></span></li>*@
                    </ul>
                    <a href="@Url.Action("Pay", "Product")" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
    <div class="message-box" id="messageBox"></div>
</section>
<script src="~/Scripts/BaseScript/BaseScripts.js"></script>
<style>
    .message-box {
        width: 20%;
        height: 8%;
        display: none;
        position: fixed;
        top: 10%;
        left: 90%;
        transform: translate(-50%, -50%);
        padding: 20px;
        border-radius: 5px;
        background-color: #7fad39;
        z-index: 9999;
        text-align: center
    }

    .success {
        color: whitesmoke;
    }

    .error {
        border-color: red;
        color: red;
    }
</style>
<!-- Shoping Cart Section End -->
