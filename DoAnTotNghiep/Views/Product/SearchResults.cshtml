@model PagedList.IPagedList<DoAnTotNghiep.Models.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "SearchResults";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All Categories</span>
                    </div>
                    <ul>
                        @Html.Action("CategoryPartial", "Product")
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">

                <div class="hero__search">
                    <div class="hero__search__form">
                        @using (Html.BeginForm("SearchResults", "Product", FormMethod.Post))
                        {
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            @Html.TextBox("txtsearch", "", htmlAttributes: new { placeholder = "What do you find" })

                            <button type="submit" class="site-btn">SEARCH</button>
                        }
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 962601281</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
                <div class="humberger__open">
                    <i class="fa fa-bars"></i>
                </div>



                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-title">
                                <h2>Search results</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row featured__filter">
                        @foreach (var item in Model)
                        {

                            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                                <div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/Images/" + item.Product_Img)">
                                        <ul class="featured__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="featured__item__text">
                                        <h4>@item.Product_Name</h4>
                                        <h5>@item.Price $</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div>
                        <nav>
                            <ul class="pagination">
                                @Html.PagedListPager(Model, page => Url.Action("SearchResults", new { page }))
                            </ul>
                        </nav>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<!-- Featured Section End -->
<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/Asset/img/banner/cay3.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6" style="padding-left:50px">
                <div class="banner__pic">
                    <img src="~/Asset/img/banner/cay4.jpg" alt="" style="width:620px; height:321px"/>
                </div>
            </div>
        </div>
    </div>
</div>


