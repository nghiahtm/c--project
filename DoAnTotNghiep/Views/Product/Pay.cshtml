@model DoAnTotNghiep.Models.Userr
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/Images/bannerctsp.jpg" style="background-image: url(@Url.Content("Images/bannerctsp.jpg"))">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            @*<div class="col-lg-12">
                <h6>
                    <span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                </h6>
            </div>*@
        </div>
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form action="#">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Name<span>*</span></p>
                                    <input type="text" value="@Model.UserName">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input type="text" placeholder="Street Address" class="checkout__input__add" value="@Model.User_Address">

                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input type="text" value="@Model.Phone">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text" value="@Model.Email">
                                </div>
                            </div>
                        </div>
                        @*<div class="checkout__input__checkbox">
            <label for="diff-acc">
                Ship to a different address?
                <input type="checkbox" id="diff-acc">
                <span class="checkmark"></span>
            </label>
        </div>*@
                        <div class="checkout__input">
                            <p>Order notes<span>*</span></p>
                            <input type="text"
                                   placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                        <div>
                            <p>
                                Note<span style="color:red">*</span> <br />
                                If you choose to pay via bank transfer, please place your order and transfer the payment to the following account, then contact us again to confirm your order:<br />
                                DINH THI HUONG <br />
                                Tien Phong bank <br />
                                STK/Phone: 0962601281
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">
                                <span>Products</span>
                                <span>Total</span>
                                <span>Quantity</span>
                            </div>
                            <ul>
                                @foreach (var item in @ViewBag.ProductDto)
                                {
                                    <li>
                                        <span>@item.Product_Name</span>
                                        <span>$@item.Price</span>
                                        <span>@item.Quantity</span>
                                    </li>
                                }
                            </ul>
                            <div class="checkout__order__subtotal">Subtotal <span>$@ViewBag.TotalPrice</span></div>
                            <div class="checkout__order__total">Total <span>$@ViewBag.TotalPrice</span></div>

                            <div>
                                <select id="paymentMethod">
                                    <option value="1">Payment on Delivery</option>
                                    <option value="2">Bank Transfer</option>
                                </select>
                            </div>
                            <button onclick="placeOrder()"  class="site-btn">PLACE ORDER</button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<script src="~/Scripts/BaseScript/BaseScripts.js"></script>
<style>
    .checkout__order__products {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .checkout__order__products span {
            flex: 1;
            text-align: center;
        }

    ul {
        list-style-type: none;
        padding: 0;
    }

        ul li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px; /* Điều chỉnh khoảng cách giữa các mục */
        }

            ul li span {
                flex: 1;
                text-align: center;
            }
</style>
<!-- Checkout Section End -->
