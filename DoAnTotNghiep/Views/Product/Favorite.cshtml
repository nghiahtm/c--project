
@{
    ViewBag.Title = "Favorite";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<div class="message-box" id="messageBox"></div>
<script src="~/Scripts/BaseScript/BaseScripts.js"></script>
<style>
    .pagination li {
        border-width: 20px;
        margin-left: 50px;
    }

    .pagination {
        margin-left: 367px;
    }

    .trang {
        margin-left: 1075px;
    }

    .pagination li active a {
        background-color: green;
    }

    .message-box {
        width: 20%;
        height: 8%;
        display: none;
        position: fixed;
        top: 10%;
        left: 90%;
        transform: translate(-50%, -50%);
        padding: 20px;
        border-radius: 5px;
        background-color: #7fad39;
        z-index: 9999;
        text-align: center
    }

    .success {
        color: whitesmoke;
    }

    .error {
        border-color: red;
        color: red;
    }
</style>

@model List<DoAnTotNghiep.Models.Favorite>
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All Categories</span>
                    </div>
                    <ul>
                        @*@Html.Action("CategoryPartial", "Product")*@
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        @using (Html.BeginForm("SearchResults", "Product", FormMethod.Post))
                        {
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            @Html.TextBox("txtsearch", "", htmlAttributes: new { placeholder = "What do you find" })

                            <button type="submit" class="site-btn">SEARCH</button>
                        }
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 962601281</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="breadcrumb-section set-bg" data-setbg="/Images/bannerctsp.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Favorite</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Favorite</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>All favorite products</h2>
                </div>
                <div class="featured__controls">
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in ViewBag.favorite)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg">
                            <a href="@Url.Action("ProductDetail", "Product", new { @ID_Product = item.ID_Product })"><img src="@Url.Content("~/Images/"+ @item.Product.Product_Img)" style="width:295px; height:295px"></a>
                            <ul class="featured__item__pic__hover">
                                <li><a onclick="addFavorites(@item.ID_Product)"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a onclick="addShop(@item.ID_Product)"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@item.Product.Product_Name</h6>
                            <h5>@item.Product.Price $</h5>
                        </div>
                        <div class="container_swap">

                            <a onclick="addShop(@item.Product.ID_Product)" ;style="margin-bottom: 0px; " class="primary-btn" style="color: white; margin-left: 20px ">Buy Now</a>
                            <div>  <a onclick="removeFavorite(@item.Product.ID_Product)" ;style="margin-bottom: 0px;" class="primary-btn" style="color: white; margin-left:20px">Delete</a></div>
                           

                        </div>
             
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<style>

    .container_swap {
      display:flex;
    }

    .div_left {
      
        float: left;
        
    }

    .div_right {
       
        float: right;
        
    }
</style>

